{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "amd",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outFile": "docs/bundle.js",
    "rootDir": "docs",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["docs/third-party/*"],
      "lib/*": ["docs/lib/*"]
    }
  },
  "include": [
    "docs"
  ],
  "exclude": [
    "docs/bundle.js"
  ]
}
